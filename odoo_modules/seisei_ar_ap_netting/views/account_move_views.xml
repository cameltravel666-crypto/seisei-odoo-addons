<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add netting action to invoice form -->
    <record id="view_move_form_netting" model="ir.ui.view">
        <field name="name">account.move.form.netting</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add netting button after other action buttons -->
            <xpath expr="//header/button[@name='action_register_payment']" position="after">
                <button name="action_open_netting_wizard"
                        string="AR/AP Netting"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'posted' or not partner_id"
                        groups="account.group_account_user"/>
            </xpath>
        </field>
    </record>

</odoo>
