<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customize Web Client Title -->
    <template id="nagashiro_theme.layout" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <title>Nagashiro ERP</title>
        </xpath>
    </template>

    <!-- Remove "Powered by Odoo" footer from login page -->
    <template id="nagashiro_theme.login_layout" inherit_id="web.login_layout">
        <xpath expr="//div[contains(@class, 'text-center') and contains(@class, 'small') and contains(@class, 'mt-4')]" position="replace"/>
    </template>
</odoo>
