<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Withholding Tax List View -->
    <record id="hr_withholding_tax_view_tree" model="ir.ui.view">
        <field name="name">hr.withholding.tax.tree</field>
        <field name="model">hr.withholding.tax</field>
        <field name="arch" type="xml">
            <list>
                <field name="wage_min"/>
                <field name="wage_max"/>
                <field name="tax_dep_0" string="0 Dep"/>
                <field name="tax_dep_1" string="1 Dep"/>
                <field name="tax_dep_2" string="2 Dep"/>
                <field name="tax_dep_3" string="3 Dep"/>
                <field name="tax_dep_4" string="4 Dep" optional="hide"/>
                <field name="tax_dep_5" string="5 Dep" optional="hide"/>
                <field name="tax_dep_6" string="6 Dep" optional="hide"/>
                <field name="tax_dep_7" string="7 Dep" optional="hide"/>
                <field name="tax_column_b" string="Column B" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Withholding Tax Form View -->
    <record id="hr_withholding_tax_view_form" model="ir.ui.view">
        <field name="name">hr.withholding.tax.form</field>
        <field name="model">hr.withholding.tax</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Wage Range">
                            <field name="wage_min"/>
                            <field name="wage_max"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Tax Column A (Primary Job)">
                        <group>
                            <field name="tax_dep_0" string="0 Dependents"/>
                            <field name="tax_dep_1" string="1 Dependent"/>
                            <field name="tax_dep_2" string="2 Dependents"/>
                            <field name="tax_dep_3" string="3 Dependents"/>
                        </group>
                        <group>
                            <field name="tax_dep_4" string="4 Dependents"/>
                            <field name="tax_dep_5" string="5 Dependents"/>
                            <field name="tax_dep_6" string="6 Dependents"/>
                            <field name="tax_dep_7" string="7 Dependents"/>
                        </group>
                    </group>
                    <group string="Tax Column B (Secondary Job)">
                        <field name="tax_column_b"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Withholding Tax Search View -->
    <record id="hr_withholding_tax_view_search" model="ir.ui.view">
        <field name="name">hr.withholding.tax.search</field>
        <field name="model">hr.withholding.tax</field>
        <field name="arch" type="xml">
            <search>
                <field name="wage_min"/>
                <field name="wage_max"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Withholding Tax Action -->
    <record id="hr_withholding_tax_action" model="ir.actions.act_window">
        <field name="name">Withholding Tax</field>
        <field name="res_model">hr.withholding.tax</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new withholding tax entry
            </p>
            <p>
                Import the withholding tax table from the National Tax Agency.
            </p>
        </field>
    </record>
</odoo>
