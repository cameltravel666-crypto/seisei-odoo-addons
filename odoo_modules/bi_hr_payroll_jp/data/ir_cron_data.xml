<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <data noupdate="1">
        <!-- Cron job to check for insurance rate updates -->
        <record id="ir_cron_insurance_rate_reminder" model="ir.cron">
            <field name="name">Insurance Rate Update Reminder / 保険料率更新リマインダー</field>
            <field name="model_id" ref="model_hr_insurance_rate"/>
            <field name="state">code</field>
            <field name="code">model.check_rate_update_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(months=1)).strftime('%Y-%m-01 00:00:00')"/>
        </record>
    </data>
</odoo>
