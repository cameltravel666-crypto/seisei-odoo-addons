<odoo>

  <!-- Kanban -->
  <record id="view_kitchen_screen_kanban" model="ir.ui.view">
    <field name="name">kitchen_screen.kanban</field>
    <field name="model">ab_pos.kitchen_screen</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_dashboard">
        <t t-name="kanban-box">
          <div class="oe_kanban_card oe_kanban_global_click">
            <div class="oe_kanban_details pb-2">
              <div class="o_kanban_record_top mb-0">
                <field name="name" class="mt-2 h3 mb-0" />
              </div>
              <field name="config_ids" widget="many2many_tags" class="ms-2" />

              <div id="kitchen_screen_actions" class="d-flex flex-wrap">
                <div class="mt-2 me-2">
                  <button class="btn btn-secondary" name="open_kitchen" type="object">
                    Open Screen
                  </button>
                </div>
              </div>
            </div>
          </div>
        </t>
      </kanban>
    </field>
  </record>

  <!-- Form -->
  <record id="view_kitchen_screen_form" model="ir.ui.view">
    <field name="name">kitchen_screen.form</field>
    <field name="model">ab_pos.kitchen_screen</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button class="oe_highlight" invisible="not id" name="open_kitchen" type="object" string="Open"/>
        </header>
        <sheet>
          <div class="oe_title">
            <label for="name" string="Name" />
            <h1>
              <div class="d-flex">
                <field class="text-break" name="name"
                  options="{'line_breaks': False}"
                  widget="text" placeholder="e.g. Kitchen Screen" />
              </div>
            </h1>
          </div>
          <group>
            <field name="config_ids" widget="many2many_tags" options="{'create':false}" placeholder="All PoS" />
            <field name="wait_time" />
            <field name="filter" widget="domain"
                  options="{'model': 'pos.order'}"></field>
          </group>

          <notebook>
            <page name="Orderline Groups" widget="one2many">
              <field name="orderline_group_ids">
                <list string="Orderline Groups" editable="bottom">
                  <field name="sequence" widget="handle"></field>
                  <field name="name"></field>
                  <field name="category_ids" widget="many2many_tags"></field>
                  <field name="attribute_ids" widget="many2many_tags"></field>
                </list>
              </field>
              <div class="text-muted">Define groups of products within an order.</div>
            </page>
          </notebook>


        </sheet>

      </form>
    </field>
  </record>

</odoo>