<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend team form to show SLA link -->
    <record id="seisei_helpdesk_team_view_form_sla" model="ir.ui.view">
        <field name="name">seisei.helpdesk.team.form.sla</field>
        <field name="model">seisei.helpdesk.team</field>
        <field name="inherit_id" ref="seisei_helpdesk.seisei_helpdesk_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(seisei_helpdesk_sla.action_seisei_helpdesk_sla)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-clock-o"
                        invisible="not use_sla"
                        context="{'search_default_team_id': active_id}">
                    <field name="sla_count" widget="statinfo" string="SLA"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
