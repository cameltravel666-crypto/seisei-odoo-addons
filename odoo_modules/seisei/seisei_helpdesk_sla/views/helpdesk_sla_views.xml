<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- SLA Policy: Form                                             -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_sla_view_form" model="ir.ui.view">
        <field name="name">seisei.helpdesk.sla.form</field>
        <field name="model">seisei.helpdesk.sla</field>
        <field name="arch" type="xml">
            <form string="SLA Policy">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Urgent Response 4h"/></h1>
                    </div>
                    <group>
                        <group string="Target">
                            <field name="team_id"/>
                            <field name="target_stage_id"
                                   domain="[('team_ids', 'in', team_id)]"/>
                            <field name="time_hours" widget="float_time"/>
                        </group>
                        <group string="Escalation">
                            <field name="escalation_user_id"/>
                        </group>
                    </group>
                    <group string="Matching Criteria">
                        <group>
                            <field name="priority"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="exclude_stage_ids" widget="many2many_tags"
                                   domain="[('team_ids', 'in', team_id)]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- SLA Policy: List                                             -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_sla_view_list" model="ir.ui.view">
        <field name="name">seisei.helpdesk.sla.list</field>
        <field name="model">seisei.helpdesk.sla</field>
        <field name="arch" type="xml">
            <list string="SLA Policies">
                <field name="name"/>
                <field name="team_id"/>
                <field name="target_stage_id"/>
                <field name="time_hours" widget="float_time"/>
                <field name="priority"/>
                <field name="escalation_user_id"/>
                <field name="ticket_count" string="Open"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- SLA Status: List (embedded in ticket)                        -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_sla_status_view_list" model="ir.ui.view">
        <field name="name">seisei.helpdesk.sla.status.list</field>
        <field name="model">seisei.helpdesk.sla.status</field>
        <field name="arch" type="xml">
            <list string="SLA Status" create="false" edit="false"
                  decoration-danger="status == 'failed'"
                  decoration-success="status == 'reached'"
                  decoration-info="status == 'ongoing'">
                <field name="sla_id"/>
                <field name="deadline"/>
                <field name="reached_datetime"/>
                <field name="status"/>
                <field name="exceeded_hours" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- SLA: Action                                                  -->
    <!-- ============================================================ -->
    <record id="action_seisei_helpdesk_sla" model="ir.actions.act_window">
        <field name="name">SLA Policies</field>
        <field name="res_model">seisei.helpdesk.sla</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SLA policy
            </p>
            <p>Define response and resolution times for your support teams.</p>
        </field>
    </record>

    <!-- Menu under Configuration -->
    <menuitem id="menu_helpdesk_config_sla"
              name="SLA Policies"
              parent="seisei_helpdesk.menu_helpdesk_configuration"
              action="action_seisei_helpdesk_sla"
              sequence="5"/>
</odoo>
