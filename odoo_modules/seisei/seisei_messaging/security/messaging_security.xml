<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_seisei_messaging" model="ir.module.category">
        <field name="name">Seisei Messaging</field>
        <field name="sequence">31</field>
    </record>

    <record id="group_seisei_messaging_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_seisei_messaging"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_seisei_messaging_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_seisei_messaging"/>
        <field name="implied_ids" eval="[(4, ref('group_seisei_messaging_user'))]"/>
    </record>

    <!-- Multi-company rules -->
    <record id="messaging_channel_company_rule" model="ir.rule">
        <field name="name">Messaging Channel: multi-company</field>
        <field name="model_id" ref="model_seisei_messaging_channel"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="messaging_conversation_company_rule" model="ir.rule">
        <field name="name">Messaging Conversation: multi-company</field>
        <field name="model_id" ref="model_seisei_messaging_conversation"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
