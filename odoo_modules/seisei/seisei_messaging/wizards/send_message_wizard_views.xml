<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seisei_messaging_send_wizard_view_form" model="ir.ui.view">
        <field name="name">seisei.messaging.send.wizard.form</field>
        <field name="model">seisei.messaging.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Message">
                <group>
                    <field name="conversation_id" readonly="1"/>
                    <field name="channel_id"/>
                    <field name="message_type"/>
                    <field name="message" placeholder="Type your reply..."/>
                </group>
                <footer>
                    <button name="action_send" type="object"
                            string="Send" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
