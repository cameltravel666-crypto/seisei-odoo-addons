<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone root menu for messaging -->
    <menuitem id="menu_seisei_messaging_root"
              name="Messaging"
              web_icon="seisei_messaging,static/description/icon.png"
              sequence="26"/>

    <menuitem id="menu_messaging_conversation_my"
              name="My Conversations"
              parent="menu_seisei_messaging_root"
              action="action_seisei_messaging_conversation_my"
              sequence="1"/>

