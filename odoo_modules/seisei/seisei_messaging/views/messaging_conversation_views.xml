<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seisei_messaging_conversation_view_form" model="ir.ui.view">
        <field name="name">seisei.messaging.conversation.form</field>
        <field name="model">seisei.messaging.conversation</field>
        <field name="arch" type="xml">
            <form string="Conversation">
                <header>
                    <button name="action_assign_to_me" type="object"
                            string="Assign to Me" class="oe_highlight"
                            invisible="assigned_user_id == uid"/>
                    <button name="action_send_message" type="object"
                            string="Reply" class="oe_highlight"/>
                    <button name="action_close" type="object"
                            string="Close" invisible="state == 'closed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="channel_id"/>
                            <field name="channel_type"/>
                            <field name="external_id"/>
                            <field name="external_name"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="assigned_user_id"/>
                            <field name="last_message_at"/>
                            <field name="message_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids_rel">
                                <list create="false" edit="false"
                                      decoration-info="direction == 'in'"
                                      decoration-success="direction == 'out'">
                                    <field name="timestamp"/>
                                    <field name="direction"/>
                                    <field name="message_type"/>
                                    <field name="content"/>
                                    <field name="is_ai_reply"/>
                                    <field name="delivery_status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="seisei_messaging_conversation_view_list" model="ir.ui.view">
        <field name="name">seisei.messaging.conversation.list</field>
        <field name="model">seisei.messaging.conversation</field>
        <field name="arch" type="xml">
            <list string="Conversations"
                  decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="channel_type"/>
                <field name="external_id"/>
                <field name="partner_id"/>
                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                <field name="state"/>
                <field name="last_message_at"/>
                <field name="last_message_preview"/>
                <field name="message_count"/>
            </list>
        </field>
    </record>

    <record id="seisei_messaging_conversation_view_search" model="ir.ui.view">
        <field name="name">seisei.messaging.conversation.search</field>
        <field name="model">seisei.messaging.conversation</field>
        <field name="arch" type="xml">
            <search string="Search Conversations">
                <field name="name"/>
                <field name="external_id"/>
                <field name="partner_id"/>
                <field name="assigned_user_id"/>
                <separator/>
                <filter string="My Conversations" name="my"
                        domain="[('assigned_user_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned"
                        domain="[('assigned_user_id', '=', False)]"/>
                <separator/>
                <filter string="Active" name="active"
                        domain="[('state', '=', 'active')]"/>
                <filter string="Closed" name="closed"
                        domain="[('state', '=', 'closed')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Channel" name="group_channel"
                            context="{'group_by': 'channel_id'}"/>
                    <filter string="Agent" name="group_agent"
                            context="{'group_by': 'assigned_user_id'}"/>
                    <filter string="State" name="group_state"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_seisei_messaging_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">seisei.messaging.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="seisei_messaging_conversation_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <record id="action_seisei_messaging_conversation_my" model="ir.actions.act_window">
        <field name="name">My Conversations</field>
        <field name="res_model">seisei.messaging.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="seisei_messaging_conversation_view_search"/>
        <field name="context">{
            'search_default_my': 1,
            'search_default_active': 1,
        }</field>
    </record>
</odoo>
