<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seisei_messaging_message_view_list" model="ir.ui.view">
        <field name="name">seisei.messaging.message.list</field>
        <field name="model">seisei.messaging.message</field>
        <field name="arch" type="xml">
            <list string="Messages" create="false"
                  decoration-info="direction == 'in'"
                  decoration-success="direction == 'out'"
                  decoration-danger="delivery_status == 'failed'">
                <field name="timestamp"/>
                <field name="conversation_id"/>
                <field name="direction"/>
                <field name="message_type"/>
                <field name="content"/>
                <field name="is_ai_reply"/>
                <field name="delivery_status"/>
                <field name="external_msg_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="seisei_messaging_message_view_form" model="ir.ui.view">
        <field name="name">seisei.messaging.message.form</field>
        <field name="model">seisei.messaging.message</field>
        <field name="arch" type="xml">
            <form string="Message" create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="conversation_id"/>
                            <field name="direction"/>
                            <field name="message_type"/>
                            <field name="timestamp"/>
                        </group>
                        <group>
                            <field name="delivery_status"/>
                            <field name="is_ai_reply"/>
                            <field name="external_msg_id"/>
                            <field name="media_url" widget="url"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1"/>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_seisei_messaging_message" model="ir.actions.act_window">
        <field name="name">Messages</field>
        <field name="res_model">seisei.messaging.message</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
