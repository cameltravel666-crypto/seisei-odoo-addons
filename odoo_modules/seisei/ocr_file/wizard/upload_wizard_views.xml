<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Upload Wizard Form View -->
        <record id="view_ocr_file_upload_wizard_form" model="ir.ui.view">
            <field name="name">ocr.file.upload.wizard.form</field>
            <field name="model">ocr.file.upload.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Source Files">
                    <group>
                        <field name="task_id" readonly="1" invisible="1"/>
                        <p class="text-muted">
                            Upload multiple images or PDF files. You can add files one by one in the list below.
                        </p>
                    </group>
                    <field name="file_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="file_data" filename="filename" widget="binary"
                                   options="{'accepted_file_extensions': '.jpg,.jpeg,.png,.gif,.bmp,.pdf'}"/>
                            <field name="filename"/>
                        </list>
                    </field>
                    <footer>
                        <button name="action_upload" string="Add Files" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Upload Wizard Action -->
        <record id="action_ocr_file_upload_wizard" model="ir.actions.act_window">
            <field name="name">Add Source Files</field>
            <field name="res_model">ocr.file.upload.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
