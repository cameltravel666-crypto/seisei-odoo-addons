<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add smart button to partner form -->
    <record id="view_partner_form_netting" model="ir.ui.view">
        <field name="name">res.partner.form.netting</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add netting button in the button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_netting_wizard"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-exchange"
                        invisible="not netting_available"
                        groups="account.group_account_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="nettable_amount" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Netting</span>
                    </div>
                </button>
                <field name="netting_available" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
