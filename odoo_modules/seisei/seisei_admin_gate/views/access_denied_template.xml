<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Access Denied Template -->
    <template id="access_denied" name="Admin Access Denied">
        <t t-call="web.login_layout">
            <div class="oe_login_form">
                <div class="alert alert-danger text-center" role="alert">
                    <h4 class="alert-heading">
                        <i class="fa fa-ban"/> Access Denied
                    </h4>
                    <hr/>
                    <p class="mb-0">
                        <strong>Admin backend access is restricted.</strong>
                    </p>
                    <p class="mb-0">
                        Only <code t-esc="admin_email"/> can access this resource.
                    </p>
                    <t t-if="login">
                        <p class="mb-0 mt-2 text-muted">
                            Attempted login: <code t-esc="login"/>
                        </p>
                    </t>
                </div>

                <div class="text-center mt-4">
                    <p>
                        <strong>For normal business operations:</strong><br/>
                        Please use <a href="https://biznexus.seisei.tokyo">BizNexus</a>
                    </p>
                    <a href="https://biznexus.seisei.tokyo/login"
                       class="btn btn-primary">
                        Go to BizNexus
                    </a>
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        Host: <t t-esc="host"/><br/>
                        This is the second gate (Traefik is the first)
                    </small>
                </div>
            </div>
        </t>
    </template>
</odoo>
