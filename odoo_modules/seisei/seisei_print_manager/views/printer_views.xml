<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Printer Information List View -->
        <record id="view_seisei_printer_list" model="ir.ui.view">
                    <field name="name">seisei.printer.list</field>
        <field name="model">seisei.printer</field>
            <field name="arch" type="xml">
                <list string="Printer Information" decoration-success="status=='idle'" decoration-warning="status=='printing'" decoration-danger="status=='error'" decoration-muted="status=='offline'">
                    <field name="station_id"/>
                    <field name="name"/>
                    <field name="display_name"/>
                    <field name="location"/>
                    <field name="manufacturer"/>
                    <field name="model"/>
                    <field name="status" widget="badge" decoration-success="status=='idle'" decoration-warning="status=='printing'" decoration-danger="status=='error'" decoration-info="status=='unknown'"/>
                    <field name="is_default" widget="boolean_toggle"/>
                    <field name="service_sync" widget="boolean"/>
                    <field name="last_sync_time"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="total_jobs"/>
                    <field name="success_rate" widget="percentage"/>
                </list>
            </field>
        </record>

        <!-- Printer Information Form View -->
        <record id="view_seisei_printer_form" model="ir.ui.view">
                    <field name="name">seisei.printer.form</field>
        <field name="model">seisei.printer</field>
            <field name="arch" type="xml">
                <form string="Printer Information">
                    <header>
                        <button name="action_test_print" type="object" string="Test Print" class="btn-primary" invisible="status not in ['idle', 'unknown']"/>
                        <button name="action_set_default" type="object" string="Set as Default" class="btn-secondary" invisible="is_default"/>
                        <button name="action_sync_status" type="object" string="Sync Status" class="btn-info"/>
                        <field name="status" widget="statusbar" statusbar_visible="idle,printing,error,offline"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_jobs" type="object" class="oe_stat_button" icon="fa-print">
                                <field name="total_jobs" widget="statinfo" string="Print Jobs"/>
                            </button>
                            <button name="action_view_mappings" type="object" class="oe_stat_button" icon="fa-sitemap">
                                <field name="mapping_count" widget="statinfo" string="Mapping Rules"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Default Printer" bg_color="bg-success" invisible="not is_default"/>
                        <widget name="web_ribbon" title="Service Sync" bg_color="bg-info" invisible="not service_sync"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="o_text_overflow" placeholder="Printer Name"/>
                            </h1>
                            <h3>
                                <field name="display_name" readonly="1" class="text-muted"/>
                            </h3>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="station_id" options="{'no_create': True}"/>
                                <field name="system_name"/>
                                <field name="description"/>
                                <field name="location"/>
                                <field name="manufacturer"/>
                                <field name="model"/>
                            </group>
                            <group string="Status Information">
                                <field name="is_default"/>
                                <field name="service_sync"/>
                                <field name="last_sync_time"/>
                                <field name="active"/>
                                <field name="status_message"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Statistics">
                                <group>
                                    <group string="Job Statistics">
                                        <field name="total_jobs"/>
                                        <field name="success_jobs"/>
                                        <field name="failed_jobs"/>
                                        <field name="success_rate" widget="percentage"/>
                                    </group>
                                    <group string="Technical Information">
                                        <field name="supported_formats"/>
                                        <field name="capabilities"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Printer Information Kanban View -->
        <record id="view_seisei_printer_kanban" model="ir.ui.view">
                    <field name="name">seisei.printer.kanban</field>
        <field name="model">seisei.printer</field>
            <field name="arch" type="xml">
                <kanban string="Printer Information">
                    <field name="name"/>
                    <field name="display_name"/>
                    <field name="status"/>
                    <field name="is_default"/>
                    <field name="service_sync"/>
                    <field name="location"/>
                    <field name="total_jobs"/>
                    <field name="success_rate"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <i class="fa fa-print fa-2x" title="Printer" t-attf-style="color: #{status == 'idle' ? 'green' : status == 'printing' ? 'orange' : status == 'error' ? 'red' : 'gray'};"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                        <span t-if="record.is_default.raw_value" class="badge badge-success ml-2">Default</span>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <span t-if="record.location.raw_value">üìç <t t-esc="record.location.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge" t-attf-class="badge-#{status == 'idle' ? 'success' : status == 'printing' ? 'warning' : status == 'error' ? 'danger' : 'secondary'}">
                                            <t t-esc="status"/>
                                        </span>
                                        <span t-if="record.service_sync.raw_value" class="badge badge-info ml-1">Service</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="text-muted">
                                            üìã <t t-esc="record.total_jobs.value"/> Jobs
                                            | ‚úÖ <t t-esc="Math.round(record.success_rate.raw_value)"/>%
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Printer Information Search View -->
        <record id="view_seisei_printer_search" model="ir.ui.view">
                    <field name="name">seisei.printer.search</field>
        <field name="model">seisei.printer</field>
            <field name="arch" type="xml">
                <search string="Search Printers">
                    <field name="name" string="Name"/>
                    <field name="station_id" string="Station"/>
                    <field name="location" string="Location"/>
                    <field name="manufacturer" string="Manufacturer"/>
                    <field name="model" string="Model"/>
                    <separator/>
                    <filter name="filter_default" string="Default Printer" domain="[('is_default', '=', True)]"/>
                    <filter name="filter_idle" string="Idle" domain="[('status', '=', 'idle')]"/>
                    <filter name="filter_printing" string="Printing" domain="[('status', '=', 'printing')]"/>
                    <filter name="filter_error" string="Error" domain="[('status', '=', 'error')]"/>
                    <filter name="filter_service_sync" string="Service Sync" domain="[('service_sync', '=', True)]"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="filter_inactive" string="Inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_station" string="Station" domain="[]" context="{'group_by': 'station_id'}"/>
                        <filter name="group_status" string="Status" domain="[]" context="{'group_by': 'status'}"/>
                        <filter name="group_location" string="Location" domain="[]" context="{'group_by': 'location'}"/>
                        <filter name="group_manufacturer" string="Manufacturer" domain="[]" context="{'group_by': 'manufacturer'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Printer Information Action -->
        <record id="action_seisei_printer" model="ir.actions.act_window">
            <field name="name">Printer Information</field>
            <field name="res_model">seisei.printer</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No printer information yet!
                </p>
                <p>
                    Click the "New" button to add a printer, or use the "Sync" function to get printer information from Service.
                </p>
            </field>
        </record>

    </data>
</odoo>