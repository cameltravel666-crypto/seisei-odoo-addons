<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- Ticket Template Views                        -->
    <!-- ============================================ -->

    <!-- List View -->
    <record id="view_ticket_template_tree" model="ir.ui.view">
        <field name="name">seisei.ticket.template.list</field>
        <field name="model">seisei.ticket.template</field>
        <field name="arch" type="xml">
            <list string="Ticket Templates" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="template_type" widget="badge"
                       decoration-info="template_type == 'pos_receipt'"
                       decoration-success="template_type == 'kitchen_ticket'"/>
                <field name="paper_width"/>
                <field name="element_count"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ticket_template_form" model="ir.ui.view">
        <field name="name">seisei.ticket.template.form</field>
        <field name="model">seisei.ticket.template</field>
        <field name="arch" type="xml">
            <form string="Ticket Template">
                <header>
                    <button name="action_open_editor" type="object"
                            string="Open Editor" class="btn-primary"
                            icon="fa-edit"/>
                    <button name="action_preview" type="object"
                            string="Preview" icon="fa-eye"/>
                    <button name="action_duplicate" type="object"
                            string="Duplicate" icon="fa-copy"/>
                    <button name="action_set_default" type="object"
                            string="Set as Default"
                            invisible="is_default"
                            icon="fa-star"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_editor" type="object"
                                class="oe_stat_button" icon="fa-edit">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="element_count"/>
                                </span>
                                <span class="o_stat_text">Elements</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Default"
                            bg_color="bg-success"
                            invisible="not is_default"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="template_type" widget="radio"
                                   options="{'horizontal': true}"/>
                            <field name="paper_width" widget="radio"
                                   options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Elements" name="elements">
                            <field name="element_ids">
                                <list editable="bottom" default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="element_type"/>
                                    <field name="text_content"
                                           invisible="element_type not in ('text', 'dynamic_field')"/>
                                    <field name="field_name"
                                           invisible="element_type != 'dynamic_field'"/>
                                    <field name="font_size"
                                           invisible="element_type not in ('text', 'dynamic_field')"/>
                                    <field name="text_align"
                                           invisible="element_type not in ('text', 'dynamic_field')"/>
                                    <field name="is_bold"
                                           invisible="element_type not in ('text', 'dynamic_field')"/>
                                    <field name="separator_style"
                                           invisible="element_type != 'separator'"/>
                                    <field name="barcode_type"
                                           invisible="element_type not in ('barcode', 'qrcode')"/>
                                    <field name="barcode_field"
                                           invisible="element_type not in ('barcode', 'qrcode')"/>
                                    <field name="height"/>
                                </list>
                            </field>
                        </page>
                        <page string="Preview" name="preview">
                            <div class="row">
                                <div class="col-md-6 offset-md-3">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Template Preview</h5>
                                        </div>
                                        <div class="card-body text-center">
                                            <field name="preview_html" widget="html"
                                                   readonly="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Template description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ticket_template_kanban" model="ir.ui.view">
        <field name="name">seisei.ticket.template.kanban</field>
        <field name="model">seisei.ticket.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="template_type"/>
                <field name="paper_width"/>
                <field name="element_count"/>
                <field name="is_default"/>
                <field name="preview_image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click d-flex">
                            <div class="o_kanban_image me-3">
                                <span class="fa fa-file-text fa-3x text-muted" title="Ticket Template"/>
                            </div>
                            <div class="oe_kanban_details flex-grow-1">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <span t-if="record.is_default.raw_value"
                                          class="badge bg-success ms-2">Default</span>
                                </strong>
                                <div class="o_kanban_record_subtitle text-muted">
                                    <field name="code"/>
                                </div>
                                <div class="mt-1">
                                    <span class="badge"
                                          t-attf-class="#{record.template_type.raw_value == 'pos_receipt' ? 'bg-info' : 'bg-success'}">
                                        <field name="template_type"/>
                                    </span>
                                    <span class="badge bg-secondary ms-1">
                                        <field name="paper_width"/>mm
                                    </span>
                                </div>
                                <div class="text-muted small mt-1">
                                    <field name="element_count"/> elements
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ticket_template_search" model="ir.ui.view">
        <field name="name">seisei.ticket.template.search</field>
        <field name="model">seisei.ticket.template</field>
        <field name="arch" type="xml">
            <search string="Search Templates">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter name="filter_pos_receipt" string="POS Receipts"
                        domain="[('template_type', '=', 'pos_receipt')]"/>
                <filter name="filter_kitchen_ticket" string="Kitchen Tickets"
                        domain="[('template_type', '=', 'kitchen_ticket')]"/>
                <separator/>
                <filter name="filter_default" string="Default Templates"
                        domain="[('is_default', '=', True)]"/>
                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Archived"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Type"
                            context="{'group_by': 'template_type'}"/>
                    <filter name="group_paper" string="Paper Width"
                            context="{'group_by': 'paper_width'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ticket_template" model="ir.actions.act_window">
        <field name="name">Ticket Templates</field>
        <field name="res_model">seisei.ticket.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_ticket_template_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first ticket template
            </p>
            <p>
                Design custom POS receipts and kitchen tickets
                using the visual drag-and-drop editor.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Ticket Element Views (embedded in template) -->
    <!-- ============================================ -->

    <record id="view_ticket_element_form" model="ir.ui.view">
        <field name="name">seisei.ticket.element.form</field>
        <field name="model">seisei.ticket.element</field>
        <field name="arch" type="xml">
            <form string="Ticket Element">
                <sheet>
                    <group>
                        <group>
                            <field name="element_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="height"/>
                        </group>
                    </group>

                    <!-- Text Properties -->
                    <group string="Text Properties"
                           invisible="element_type not in ('text', 'dynamic_field')">
                        <group>
                            <field name="text_content"
                                   invisible="element_type != 'text'"/>
                            <field name="field_name"
                                   invisible="element_type != 'dynamic_field'"/>
                            <field name="field_format"
                                   invisible="element_type != 'dynamic_field'"/>
                        </group>
                        <group>
                            <field name="font_size"/>
                            <field name="text_align"/>
                            <field name="is_bold"/>
                        </group>
                    </group>

                    <!-- Image Properties -->
                    <group string="Image Properties"
                           invisible="element_type != 'image'">
                        <field name="image_data" widget="image"/>
                    </group>

                    <!-- Separator Properties -->
                    <group string="Separator Properties"
                           invisible="element_type != 'separator'">
                        <field name="separator_style"/>
                        <field name="separator_char"/>
                    </group>

                    <!-- Barcode Properties -->
                    <group string="Barcode Properties"
                           invisible="element_type not in ('barcode', 'qrcode')">
                        <group>
                            <field name="barcode_type"/>
                            <field name="barcode_field"/>
                        </group>
                        <group>
                            <field name="barcode_width"/>
                            <field name="barcode_height"/>
                        </group>
                    </group>

                    <!-- Line Items Properties -->
                    <group string="Line Items Properties"
                           invisible="element_type != 'line_items'">
                        <field name="line_model"/>
                        <field name="line_fields"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
