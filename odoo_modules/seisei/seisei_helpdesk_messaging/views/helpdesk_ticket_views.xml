<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend ticket form with conversation link -->
    <record id="seisei_helpdesk_ticket_view_form_messaging" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.form.messaging</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="inherit_id" ref="seisei_helpdesk.seisei_helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <!-- Add reply button in header -->
            <xpath expr="//button[@name='action_assign_to_me']" position="after">
                <button name="action_reply_via_channel"
                        type="object"
                        string="Reply via Channel"
                        class="oe_highlight"
                        invisible="not source_conversation_id"/>
            </xpath>
            <!-- Add conversation stat button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_conversation"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-comments"
                        invisible="not source_conversation_id">
                    <field name="conversation_message_count" widget="statinfo"
                           string="Messages"/>
                </button>
            </xpath>
            <!-- Add conversation field to extra info -->
            <xpath expr="//field[@name='channel_type']" position="after">
                <field name="source_conversation_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
