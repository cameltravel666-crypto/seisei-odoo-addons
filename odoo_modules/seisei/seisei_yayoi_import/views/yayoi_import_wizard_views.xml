<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard form view (full-page, not popup) -->
    <record id="view_yayoi_import_wizard_form" model="ir.ui.view">
        <field name="name">seisei.yayoi.import.wizard.form</field>
        <field name="model">seisei.yayoi.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Excel → 弥生TXT変換">
                <header>
                    <button name="action_parse" string="読み込み"
                            type="object" class="btn-primary"
                            invisible="state != 'upload'"/>
                    <button name="action_export_txt" string="弥生TXTエクスポート"
                            type="object" class="btn-primary"
                            invisible="state != 'preview'"/>
                    <button name="action_back" string="戻る"
                            type="object" class="btn-secondary"
                            invisible="state != 'preview'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="upload,preview"/>
                </header>
                <sheet>
                    <!-- Upload state -->
                    <group invisible="state != 'upload'">
                        <group string="ファイル">
                            <field name="file_data" filename="filename"/>
                            <field name="filename" invisible="1"/>
                        </group>
                        <group string="勘定科目">
                            <field name="debit_account"/>
                            <field name="credit_account"/>
                        </group>
                    </group>

                    <!-- Preview state -->
                    <group invisible="state != 'preview'">
                        <group string="勘定科目">
                            <field name="debit_account"/>
                            <field name="credit_account"/>
                        </group>
                    </group>
                    <field name="line_ids" invisible="state != 'preview'" nolabel="1">
                        <list editable="bottom">
                            <field name="date"/>
                            <field name="description"/>
                            <field name="receipt_no"/>
                            <field name="seq_no"/>
                            <field name="amount" sum="合計"/>
                            <field name="tax_rate"/>
                            <field name="tax_amount" sum="税額合計"/>
                            <field name="tax_category"/>
                        </list>
                    </field>

                    <field name="export_data" invisible="1"/>
                    <field name="export_filename" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard action: full page -->
    <record id="action_yayoi_import_wizard" model="ir.actions.act_window">
        <field name="name">Excel → 弥生TXT変換</field>
        <field name="res_model">seisei.yayoi.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Top-level nav tab in Accounting app (alongside Dashboard, Customers, etc.) -->
    <menuitem id="menu_yayoi_import_root"
              name="弥生インポート"
              parent="account.menu_finance"
              sequence="55"/>

    <menuitem id="menu_yayoi_import"
              name="Excel → TXT変換"
              parent="menu_yayoi_import_root"
              action="action_yayoi_import_wizard"
              sequence="10"/>

</odoo>
