<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Remove "Powered by Odoo" from mail notification layout -->
    <template id="nagashiro_mail_notification_layout"
              inherit_id="mail.mail_notification_layout">
        <!-- Force show_footer to False so the "Powered by Odoo" row never renders -->
        <xpath expr="//t[@t-set='show_footer']" position="replace">
            <t t-set="show_footer" t-value="False"/>
        </xpath>
    </template>
</odoo>
