<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override login form to always show it (remove d-none) -->
    <template id="login_force_show" inherit_id="web.login" priority="99">
        <!-- Replace the form class to remove d-none condition -->
        <xpath expr="//form[contains(@t-attf-class, 'oe_login_form')]" position="attributes">
            <attribute name="t-attf-class">oe_login_form</attribute>
        </xpath>
    </template>
</odoo>
