<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ===== Balance Sheet Report ===== -->
        <record id="balance_sheet" model="account.report">
            <field name="name">Balance Sheet</field>
            <field name="filter_date_range" eval="False"/>
            <field name="filter_show_draft" eval="True"/>
            <field name="filter_hide_0_lines" eval="True"/>
            <field name="filter_unfold_all" eval="False"/>
            <field name="default_opening_date_filter">this_year</field>
            <field name="sequence">2</field>
        </record>

        <record id="bs_column_balance" model="account.report.column">
            <field name="name">Balance</field>
            <field name="expression_label">balance</field>
            <field name="figure_type">monetary</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="sequence">10</field>
        </record>

        <!-- ===== ASSETS ===== -->
        <record id="bs_assets" model="account.report.line">
            <field name="name">Assets</field>
            <field name="code">ASSETS</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">0</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Current Assets -->
        <record id="bs_current_assets" model="account.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CA</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_assets"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">1</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Bank and Cash -->
        <record id="bs_bank_cash" model="account.report.line">
            <field name="name">Bank and Cash Accounts</field>
            <field name="code">CASH</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_assets"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_bank_cash_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', 'in', ['asset_cash'])]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_bank_cash"/>
        </record>

        <!-- Receivables -->
        <record id="bs_receivables" model="account.report.line">
            <field name="name">Receivables</field>
            <field name="code">RECV</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_assets"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_receivables_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'asset_receivable')]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_receivables"/>
        </record>

        <!-- Current Assets (other) -->
        <record id="bs_current_assets_other" model="account.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CAOTH</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_assets"/>
            <field name="sequence">30</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_current_assets_other_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'asset_current')]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_current_assets_other"/>
        </record>

        <!-- Prepayments -->
        <record id="bs_prepayments" model="account.report.line">
            <field name="name">Prepayments</field>
            <field name="code">PREP</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_assets"/>
            <field name="sequence">40</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_prepayments_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'asset_prepayments')]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_prepayments"/>
        </record>

        <!-- Total Current Assets -->
        <record id="bs_current_assets_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">CASH.balance + RECV.balance + CAOTH.balance + PREP.balance</field>
            <field name="report_line_id" ref="bs_current_assets"/>
        </record>

        <!-- Non-current Assets -->
        <record id="bs_non_current_assets" model="account.report.line">
            <field name="name">Plus Non-current Assets</field>
            <field name="code">NCA</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_assets"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">1</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Fixed Assets -->
        <record id="bs_fixed_assets" model="account.report.line">
            <field name="name">Fixed Assets</field>
            <field name="code">FA</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_non_current_assets"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_fixed_assets_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'asset_fixed')]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_fixed_assets"/>
        </record>

        <!-- Non-current Assets (other) -->
        <record id="bs_non_current_assets_other" model="account.report.line">
            <field name="name">Non-current Assets</field>
            <field name="code">NCAOTH</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_non_current_assets"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_non_current_assets_other_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'asset_non_current')]</field>
            <field name="subformula">sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_non_current_assets_other"/>
        </record>

        <!-- Total Non-current Assets -->
        <record id="bs_non_current_assets_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">FA.balance + NCAOTH.balance</field>
            <field name="report_line_id" ref="bs_non_current_assets"/>
        </record>

        <!-- Total Assets -->
        <record id="bs_assets_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">CA.balance + NCA.balance</field>
            <field name="report_line_id" ref="bs_assets"/>
        </record>

        <!-- ===== LIABILITIES ===== -->
        <record id="bs_liabilities" model="account.report.line">
            <field name="name">Liabilities</field>
            <field name="code">LIAB</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">0</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Current Liabilities -->
        <record id="bs_current_liabilities" model="account.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CL</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_liabilities"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">1</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Payables -->
        <record id="bs_payables" model="account.report.line">
            <field name="name">Payables</field>
            <field name="code">PAY</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_liabilities"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_payables_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'liability_payable')]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_payables"/>
        </record>

        <!-- Current Liabilities (other) -->
        <record id="bs_current_liabilities_other" model="account.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CLOTH</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_current_liabilities"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">2</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_current_liabilities_other_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'liability_current')]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_current_liabilities_other"/>
        </record>

        <!-- Total Current Liabilities -->
        <record id="bs_current_liabilities_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">PAY.balance + CLOTH.balance</field>
            <field name="report_line_id" ref="bs_current_liabilities"/>
        </record>

        <!-- Non-current Liabilities -->
        <record id="bs_non_current_liabilities" model="account.report.line">
            <field name="name">Plus Non-current Liabilities</field>
            <field name="code">NCL</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_liabilities"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">1</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_non_current_liabilities_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'liability_non_current')]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_non_current_liabilities"/>
        </record>

        <!-- Total Liabilities -->
        <record id="bs_liabilities_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">CL.balance + NCL.balance</field>
            <field name="report_line_id" ref="bs_liabilities"/>
        </record>

        <!-- ===== EQUITY ===== -->
        <record id="bs_equity" model="account.report.line">
            <field name="name">Equity</field>
            <field name="code">EQ</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="sequence">30</field>
            <field name="hierarchy_level">0</field>
            <field name="foldable" eval="True"/>
        </record>

        <!-- Equity (accounts) -->
        <record id="bs_equity_accounts" model="account.report.line">
            <field name="name">Equity</field>
            <field name="code">EQACC</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_equity"/>
            <field name="sequence">10</field>
            <field name="hierarchy_level">1</field>
            <field name="groupby">account_id</field>
            <field name="foldable" eval="True"/>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="bs_equity_accounts_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', '=', 'equity')]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">from_beginning</field>
            <field name="report_line_id" ref="bs_equity_accounts"/>
        </record>

        <!-- Current Year Unallocated Earnings -->
        <record id="bs_unallocated_earnings" model="account.report.line">
            <field name="name">Current Year Unallocated Earnings</field>
            <field name="code">CYUE</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_equity"/>
            <field name="sequence">20</field>
            <field name="hierarchy_level">1</field>
        </record>

        <record id="bs_unallocated_earnings_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', 'in', ['income', 'income_other', 'expense', 'expense_depreciation', 'expense_direct_cost'])]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">from_fiscalyear</field>
            <field name="report_line_id" ref="bs_unallocated_earnings"/>
        </record>

        <!-- Retained Earnings -->
        <record id="bs_retained_earnings" model="account.report.line">
            <field name="name">Retained Earnings</field>
            <field name="code">RE</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="parent_id" ref="bs_equity"/>
            <field name="sequence">30</field>
            <field name="hierarchy_level">1</field>
        </record>

        <record id="bs_retained_earnings_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">domain</field>
            <field name="formula">[('account_id.account_type', 'in', ['income', 'income_other', 'expense', 'expense_depreciation', 'expense_direct_cost'])]</field>
            <field name="subformula">-sum</field>
            <field name="date_scope">to_beginning_of_fiscalyear</field>
            <field name="report_line_id" ref="bs_retained_earnings"/>
        </record>

        <!-- Total Equity -->
        <record id="bs_equity_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">EQACC.balance + CYUE.balance + RE.balance</field>
            <field name="report_line_id" ref="bs_equity"/>
        </record>

        <!-- ===== LIABILITIES + EQUITY ===== -->
        <record id="bs_liabilities_equity" model="account.report.line">
            <field name="name">Liabilities + Equity</field>
            <field name="code">LE</field>
            <field name="report_id" ref="balance_sheet"/>
            <field name="sequence">40</field>
            <field name="hierarchy_level">0</field>
        </record>

        <record id="bs_liabilities_equity_balance" model="account.report.expression">
            <field name="label">balance</field>
            <field name="engine">aggregation</field>
            <field name="formula">LIAB.balance + EQ.balance</field>
            <field name="report_line_id" ref="bs_liabilities_equity"/>
        </record>

    </data>
</odoo>
