<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ===== General Ledger Report ===== -->
        <record id="general_ledger_report" model="account.report">
            <field name="name">General Ledger</field>
            <field name="filter_date_range" eval="True"/>
            <field name="filter_show_draft" eval="True"/>
            <field name="filter_hide_0_lines" eval="True"/>
            <field name="filter_unfold_all" eval="False"/>
            <field name="filter_journals" eval="True"/>
            <field name="default_opening_date_filter">this_year</field>
            <field name="load_more_limit">80</field>
            <field name="sequence">3</field>
            <field name="custom_handler_model_id" ref="model_account_general_ledger_handler"/>
        </record>

        <record id="gl_column_date" model="account.report.column">
            <field name="name">Date</field>
            <field name="expression_label">date</field>
            <field name="figure_type">date</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="sequence">10</field>
        </record>

        <record id="gl_column_communication" model="account.report.column">
            <field name="name">Communication</field>
            <field name="expression_label">communication</field>
            <field name="figure_type">string</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="sequence">20</field>
        </record>

        <record id="gl_column_partner" model="account.report.column">
            <field name="name">Partner</field>
            <field name="expression_label">partner</field>
            <field name="figure_type">string</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="sequence">30</field>
        </record>

        <record id="gl_column_debit" model="account.report.column">
            <field name="name">Debit</field>
            <field name="expression_label">debit</field>
            <field name="figure_type">monetary</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="blank_if_zero" eval="True"/>
            <field name="sequence">40</field>
        </record>

        <record id="gl_column_credit" model="account.report.column">
            <field name="name">Credit</field>
            <field name="expression_label">credit</field>
            <field name="figure_type">monetary</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="blank_if_zero" eval="True"/>
            <field name="sequence">50</field>
        </record>

        <record id="gl_column_balance" model="account.report.column">
            <field name="name">Balance</field>
            <field name="expression_label">balance</field>
            <field name="figure_type">monetary</field>
            <field name="report_id" ref="general_ledger_report"/>
            <field name="sequence">60</field>
        </record>

    </data>
</odoo>
