<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="seisei_account_reports.AccountReport">
        <div class="o_account_report_page">
            <!-- Control Panel -->
            <div class="o_account_report_control_panel d-flex justify-content-between align-items-center p-2 bg-white border-bottom">
                <div class="d-flex align-items-center gap-2">
                    <h2 class="mb-0 fs-4" t-esc="controller.reportName"/>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <AccountReportFilters/>
                    <AccountReportButtonsBar/>
                </div>
            </div>

            <!-- Loading spinner -->
            <div t-if="controller.isLoading" class="o_account_report_loading text-center p-5">
                <i class="fa fa-spinner fa-spin fa-3x"/>
            </div>

            <!-- Report Table -->
            <div t-if="!controller.isLoading" class="o_account_report_table_wrapper">
                <table t-att-class="'o_account_report_table table table-hover table-sm' + (controller.multiPeriod ? ' o_account_report_multi_period' : '') + (controller.comparisonFilter === 'monthly' ? ' o_account_report_monthly' : '')">
                    <!-- Header -->
                    <thead>
                        <AccountReportHeader/>
                    </thead>

                    <!-- Body -->
                    <tbody>
                        <t t-foreach="controller.lines" t-as="line" t-key="line.id">
                            <AccountReportLine line="line"/>
                        </t>

                        <!-- Empty state -->
                        <tr t-if="!controller.lines.length">
                            <td colspan="99" class="text-center text-muted p-4">
                                <t t-esc="emptyStateMessage"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
