<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend res.config.settings view to add Cloud Print option -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.seisei.pos.print</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Cloud Print setting after IoT Box in Connected Devices section -->
            <xpath expr="//block[@id='pos_connected_devices_section']" position="inside">
                <setting id="pos_cloud_print" string="Cloud Print" help="Print receipts via Cloud Print">
                    <field name="pos_use_seisei_cloud_print"/>
                    <div class="content-group seisei_cloud_print_config" invisible="not pos_use_seisei_cloud_print">
                        <div class="row mt-2">
                            <label string="Receipt Printer" for="pos_seisei_receipt_printer_id" class="col-lg-4 o_light_label"/>
                            <field name="pos_seisei_receipt_printer_id" options="{'no_create': True}" placeholder="Select a printer..."/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
