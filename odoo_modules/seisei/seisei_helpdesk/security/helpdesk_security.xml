<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- Module category                                              -->
    <!-- ============================================================ -->
    <record id="module_category_seisei_helpdesk" model="ir.module.category">
        <field name="name">Seisei Helpdesk</field>
        <field name="sequence">30</field>
    </record>

    <!-- ============================================================ -->
    <!-- Groups                                                       -->
    <!-- ============================================================ -->
    <record id="group_seisei_helpdesk_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_seisei_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_seisei_helpdesk_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_seisei_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('group_seisei_helpdesk_user'))]"/>
    </record>

    <!-- ============================================================ -->
    <!-- Record rules                                                 -->
    <!-- ============================================================ -->

    <!-- Team: agents see teams they belong to; managers see all -->
    <record id="helpdesk_team_user_rule" model="ir.rule">
        <field name="name">Helpdesk Team: agents see own teams</field>
        <field name="model_id" ref="model_seisei_helpdesk_team"/>
        <field name="domain_force">[('member_ids', 'in', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_seisei_helpdesk_user'))]"/>
    </record>
    <record id="helpdesk_team_manager_rule" model="ir.rule">
        <field name="name">Helpdesk Team: managers see all</field>
        <field name="model_id" ref="model_seisei_helpdesk_team"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_seisei_helpdesk_manager'))]"/>
    </record>

    <!-- Ticket: agents see own team tickets; managers see all -->
    <record id="helpdesk_ticket_user_rule" model="ir.rule">
        <field name="name">Helpdesk Ticket: agents see own team</field>
        <field name="model_id" ref="model_seisei_helpdesk_ticket"/>
        <field name="domain_force">[
            '|',
            ('team_id.member_ids', 'in', user.id),
            ('user_id', '=', user.id),
        ]</field>
        <field name="groups" eval="[(4, ref('group_seisei_helpdesk_user'))]"/>
    </record>
    <record id="helpdesk_ticket_manager_rule" model="ir.rule">
        <field name="name">Helpdesk Ticket: managers see all</field>
        <field name="model_id" ref="model_seisei_helpdesk_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_seisei_helpdesk_manager'))]"/>
    </record>

    <!-- Portal: customers see own tickets -->
    <record id="helpdesk_ticket_portal_rule" model="ir.rule">
        <field name="name">Helpdesk Ticket: portal users see own</field>
        <field name="model_id" ref="model_seisei_helpdesk_ticket"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Multi-company rules -->
    <record id="helpdesk_team_company_rule" model="ir.rule">
        <field name="name">Helpdesk Team: multi-company</field>
        <field name="model_id" ref="model_seisei_helpdesk_team"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="helpdesk_ticket_company_rule" model="ir.rule">
        <field name="name">Helpdesk Ticket: multi-company</field>
        <field name="model_id" ref="model_seisei_helpdesk_ticket"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
