<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- Ticket: Search                                               -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.search</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="name" string="Subject"/>
                <field name="number"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="tag_ids"/>
                <separator/>
                <filter string="My Tickets" name="my_tickets"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned"
                        domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter string="Open" name="is_open"
                        domain="[('is_closed', '=', False)]"/>
                <filter string="Closed" name="is_closed"
                        domain="[('is_closed', '=', True)]"/>
                <separator/>
                <filter string="High Priority" name="high_priority"
                        domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <filter string="Created Today" name="today"
                        domain="[('create_date', '>=', (context_today()).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Created This Week" name="this_week"
                        domain="[('create_date', '>=', (context_today() - relativedelta(weeks=1)).strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Team" name="group_team"
                            context="{'group_by': 'team_id'}"/>
                    <filter string="Assigned to" name="group_user"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Stage" name="group_stage"
                            context="{'group_by': 'stage_id'}"/>
                    <filter string="Priority" name="group_priority"
                            context="{'group_by': 'priority'}"/>
                    <filter string="Channel" name="group_channel"
                            context="{'group_by': 'channel_type'}"/>
                    <filter string="Creation Date" name="group_create"
                            context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: Kanban                                               -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_kanban" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.kanban</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column"
                    quick_create="true">
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="priority"/>
                <field name="kanban_state"/>
                <field name="partner_id"/>
                <field name="tag_ids"/>
                <field name="color"/>
                <field name="is_closed"/>
                <progressbar field="kanban_state"
                             colors='{"done": "success", "blocked": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb4">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="number"/>
                                            <small class="ms-1 text-muted">
                                                <field name="name"/>
                                            </small>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags"
                                           options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom mt8">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="partner_id" widget="many2one_avatar"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection"
                                               invisible="is_closed"/>
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: List                                                 -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_list" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.list</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <list string="Helpdesk Tickets"
                  decoration-bf="priority == '3'"
                  decoration-danger="priority == '3'"
                  decoration-warning="priority == '2'"
                  decoration-muted="is_closed">
                <field name="number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="team_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="stage_id"/>
                <field name="priority" widget="priority"/>
                <field name="kanban_state" widget="state_selection"/>
                <field name="tag_ids" widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
                <field name="channel_type" optional="hide"/>
                <field name="create_date" string="Created"/>
                <field name="is_closed" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: Form                                                 -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.form</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket">
                <header>
                    <button string="Assign to Me" name="action_assign_to_me"
                            type="object" class="oe_highlight"
                            invisible="user_id == uid"/>
                    <field name="stage_id" widget="statusbar"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="number" class="me-2" readonly="1"/>
                            <field name="name" placeholder="Ticket subject..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="partner_id"/>
                            <field name="partner_email" invisible="partner_id"/>
                            <field name="partner_phone" invisible="partner_id"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                            <field name="kanban_state" widget="state_selection"/>
                            <field name="channel_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the issue..."/>
                        </page>
                        <page string="Extra Info" name="extra_info">
                            <group>
                                <group string="Contact">
                                    <field name="partner_name"/>
                                    <field name="partner_email" invisible="not partner_id"/>
                                    <field name="partner_phone" invisible="not partner_id"/>
                                </group>
                                <group string="Dates">
                                    <field name="create_date" string="Created"/>
                                    <field name="assigned_date"/>
                                    <field name="closed_date"/>
                                    <field name="last_stage_update"/>
                                </group>
                            </group>
                            <group>
                                <group string="Metrics">
                                    <field name="assign_hours"/>
                                    <field name="close_hours"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: Pivot                                                -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_pivot" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.pivot</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Helpdesk Tickets">
                <field name="team_id" type="row"/>
                <field name="stage_id" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: Graph                                                -->
    <!-- ============================================================ -->
    <record id="seisei_helpdesk_ticket_view_graph" model="ir.ui.view">
        <field name="name">seisei.helpdesk.ticket.graph</field>
        <field name="model">seisei.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Helpdesk Tickets" type="bar">
                <field name="team_id"/>
                <field name="stage_id"/>
            </graph>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Ticket: Action                                               -->
    <!-- ============================================================ -->
    <record id="action_seisei_helpdesk_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">seisei.helpdesk.ticket</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
        <field name="search_view_id" ref="seisei_helpdesk_ticket_view_search"/>
        <field name="context">{
            'search_default_is_open': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first helpdesk ticket
            </p>
            <p>Track customer issues from creation to resolution.</p>
        </field>
    </record>

    <!-- My Tickets action -->
    <record id="action_seisei_helpdesk_ticket_my" model="ir.actions.act_window">
        <field name="name">My Tickets</field>
        <field name="res_model">seisei.helpdesk.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="seisei_helpdesk_ticket_view_search"/>
        <field name="context">{
            'search_default_my_tickets': 1,
            'search_default_is_open': 1,
        }</field>
    </record>
</odoo>
