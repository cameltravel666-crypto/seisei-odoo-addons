<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="seisei_helpdesk.Dashboard">
        <div class="o_helpdesk_dashboard">
            <!-- Header -->
            <div class="dashboard-header d-flex align-items-center p-3 bg-white border-bottom">
                <h4 class="mb-0" t-esc="labels.title"/>
            </div>

            <!-- Loading -->
            <div t-if="state.loading" class="text-center p-5">
                <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
            </div>

            <!-- Dashboard Content -->
            <div t-if="!state.loading" class="p-3">

                <!-- ═══════════════════════════════════════════
                     Section 1: My Tickets
                     ═══════════════════════════════════════════ -->
                <h5 class="section-title mb-3">
                    <i class="fa fa-ticket me-2"/>
                    <t t-esc="labels.myTickets"/>
                </h5>
                <div class="row g-3 mb-4">
                    <!-- All -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100 shadow-sm kpi-card kpi-all cursor-pointer"
                             t-on-click="() => this.openMyTickets('all')">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="text-muted small mb-1" t-esc="labels.allTickets"/>
                                        <div class="fs-2 fw-bold" t-esc="state.data.my_all.count"/>
                                    </div>
                                    <i class="fa fa-inbox fa-2x text-primary opacity-25"/>
                                </div>
                                <div class="mt-2 small text-muted">
                                    <i class="fa fa-clock-o me-1"/>
                                    <t t-esc="labels.avgOpenHours"/>:
                                    <strong t-esc="state.data.my_all.avg_hours"/>h
                                </div>
                                <div t-if="state.data.show_sla" class="small text-danger">
                                    <i class="fa fa-exclamation-triangle me-1"/>
                                    <t t-esc="labels.slaFailed"/>:
                                    <strong t-esc="state.data.my_all.sla_failed"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- High Priority -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100 shadow-sm kpi-card kpi-high cursor-pointer"
                             t-on-click="() => this.openMyTickets('high')">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="text-muted small mb-1" t-esc="labels.highPriority"/>
                                        <div class="fs-2 fw-bold" t-esc="state.data.my_high.count"/>
                                    </div>
                                    <i class="fa fa-arrow-up fa-2x text-warning opacity-25"/>
                                </div>
                                <div class="mt-2 small text-muted">
                                    <i class="fa fa-clock-o me-1"/>
                                    <t t-esc="labels.avgOpenHours"/>:
                                    <strong t-esc="state.data.my_high.avg_hours"/>h
                                </div>
                                <div t-if="state.data.show_sla" class="small text-danger">
                                    <i class="fa fa-exclamation-triangle me-1"/>
                                    <t t-esc="labels.slaFailed"/>:
                                    <strong t-esc="state.data.my_high.sla_failed"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Urgent -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100 shadow-sm kpi-card kpi-urgent cursor-pointer"
                             t-on-click="() => this.openMyTickets('urgent')">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="text-muted small mb-1" t-esc="labels.urgent"/>
                                        <div class="fs-2 fw-bold" t-esc="state.data.my_urgent.count"/>
                                    </div>
                                    <i class="fa fa-fire fa-2x text-danger opacity-25"/>
                                </div>
                                <div class="mt-2 small text-muted">
                                    <i class="fa fa-clock-o me-1"/>
                                    <t t-esc="labels.avgOpenHours"/>:
                                    <strong t-esc="state.data.my_urgent.avg_hours"/>h
                                </div>
                                <div t-if="state.data.show_sla" class="small text-danger">
                                    <i class="fa fa-exclamation-triangle me-1"/>
                                    <t t-esc="labels.slaFailed"/>:
                                    <strong t-esc="state.data.my_urgent.sla_failed"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ═══════════════════════════════════════════
                     Section 2: My Performance
                     ═══════════════════════════════════════════ -->
                <h5 class="section-title mb-3">
                    <i class="fa fa-line-chart me-2"/>
                    <t t-esc="labels.myPerformance"/>
                </h5>
                <div class="row g-3 mb-4">
                    <!-- Today -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="text-muted small mb-1" t-esc="labels.todayClosed"/>
                                <div class="fs-2 fw-bold text-success" t-esc="state.data.today_closed"/>
                                <div t-if="state.data.show_sla" class="mt-2 small">
                                    <t t-esc="labels.slaSuccessRate"/>:
                                    <strong>
                                        <t t-esc="state.data.today_sla_success_rate"/>%
                                    </strong>
                                </div>
                                <!-- Progress bar -->
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between small text-muted mb-1">
                                        <span t-esc="labels.dailyTarget"/>
                                        <span>
                                            <t t-esc="state.data.today_closed"/> /
                                            <t t-esc="state.data.target_closed"/>
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success"
                                             role="progressbar"
                                             t-att-style="'width: ' + progressPct + '%'"
                                             t-att-aria-valuenow="progressPct"
                                             aria-valuemin="0"
                                             aria-valuemax="100"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 7 days -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="text-muted small mb-1" t-esc="labels.last7Days"/>
                                <div class="d-flex align-items-baseline gap-2">
                                    <span class="fs-2 fw-bold" t-esc="state.data['7days_closed']"/>
                                    <span class="text-muted small" t-esc="labels.closedTickets"/>
                                </div>
                                <div class="mt-2 small text-muted">
                                    <i class="fa fa-bar-chart me-1"/>
                                    <t t-esc="labels.avgPerDay"/>:
                                    <strong t-esc="state.data['7days_avg_closed']"/>
                                </div>
                                <div t-if="state.data.show_sla" class="mt-1 small">
                                    <t t-esc="labels.slaSuccessRate"/>:
                                    <strong>
                                        <t t-esc="state.data['7days_sla_success_rate']"/>%
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ═══════════════════════════════════════════
                     Section 3: Customer Care (per-team)
                     ═══════════════════════════════════════════ -->
                <h5 class="section-title mb-3">
                    <i class="fa fa-users me-2"/>
                    <t t-esc="labels.customerCare"/>
                </h5>
                <div class="row g-3 mb-4">
                    <t t-foreach="state.data.teams" t-as="team" t-key="team.id">
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm team-card">
                                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 fw-bold" t-esc="team.name"/>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-3 team-stat cursor-pointer"
                                             t-on-click="() => this.openTeamTickets(team.id, 'open')">
                                            <div class="fs-4 fw-bold text-primary" t-esc="team.open_count"/>
                                            <div class="small text-muted" t-esc="labels.open"/>
                                        </div>
                                        <div class="col-3 team-stat cursor-pointer"
                                             t-on-click="() => this.openTeamTickets(team.id, 'unassigned')">
                                            <div class="fs-4 fw-bold text-secondary" t-esc="team.unassigned_count"/>
                                            <div class="small text-muted" t-esc="labels.unassigned"/>
                                        </div>
                                        <div class="col-3 team-stat cursor-pointer"
                                             t-on-click="() => this.openTeamTickets(team.id, 'urgent')">
                                            <div class="fs-4 fw-bold text-danger" t-esc="team.urgent_count"/>
                                            <div class="small text-muted" t-esc="labels.urgent"/>
                                        </div>
                                        <div t-if="state.data.show_sla" class="col-3 team-stat">
                                            <div class="fs-4 fw-bold text-warning" t-esc="team.sla_failed_count"/>
                                            <div class="small text-muted" t-esc="labels.slaFailed"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <div t-if="!state.data.teams or !state.data.teams.length"
                         class="col-12 text-center text-muted py-4">
                        <i class="fa fa-info-circle me-1"/>
                        <t t-esc="labels.noTeams"/>
                    </div>
                </div>

            </div>
        </div>
    </t>
</templates>
