<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Form View with OCR -->
    <record id="view_purchase_order_form_ocr" model="ir.ui.view">
        <field name="name">purchase.order.form.ocr</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- OCR Buttons in Header -->
            <xpath expr="//header" position="inside">
                <button name="action_ocr_scan"
                        string="AI Analyze"
                        type="object"
                        class="btn-primary"
                        invisible="ocr_status == 'processing' or state not in ('draft', 'sent')"
                        icon="fa-eye"
                        title="Scan document with AI OCR (50 free/month, then ¥20/page)"/>

                <button name="action_ocr_apply_lines"
                        string="Apply Lines"
                        type="object"
                        class="btn-success"
                        invisible="not ocr_line_items or state not in ('draft', 'sent')"
                        icon="fa-check"
                        title="Apply OCR results to order lines"/>

                <button name="action_ocr_reset"
                        string="Reset"
                        type="object"
                        class="btn-secondary"
                        invisible="ocr_status == 'pending'"
                        icon="fa-refresh"
                        title="Reset AI status"/>

                <button name="action_ocr_view_usage"
                        string="Usage"
                        type="object"
                        class="btn-secondary"
                        icon="fa-bar-chart"
                        title="View OCR usage this month"/>
            </xpath>

            <!-- AI Status Badge -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="ocr_status" widget="badge" readonly="1"
                       decoration-info="ocr_status == 'pending'"
                       decoration-warning="ocr_status == 'processing'"
                       decoration-success="ocr_status == 'done'"
                       decoration-danger="ocr_status == 'failed'"/>
                <field name="ocr_matched_count" readonly="1"
                       invisible="ocr_matched_count == 0"
                       string="Matched"/>
                <field name="ocr_pages" readonly="1"
                       invisible="ocr_pages == 0"
                       string="Pages"/>
                <field name="ocr_cost" readonly="1"
                       invisible="ocr_cost == 0"
                       string="Cost ¥"/>
            </xpath>

            <!-- AI Results Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="AI Results" name="ocr_data"
                      invisible="ocr_status == 'pending'">

                    <group col="2">
                        <group string="Status">
                            <field name="ocr_status" readonly="1"/>
                            <field name="ocr_processed_at" readonly="1"/>
                            <field name="ocr_matched_count" readonly="1"/>
                        </group>
                        <group string="Billing">
                            <field name="ocr_pages" readonly="1" string="Pages Processed"/>
                            <field name="ocr_cost" readonly="1" string="Cost (JPY)"/>
                        </group>
                    </group>

                    <group invisible="not ocr_error_message" col="1">
                        <field name="ocr_error_message" readonly="1"
                               widget="text" string="Error Message"/>
                    </group>

                    <group col="2">
                        <group string="Extracted Items (JSON)">
                            <field name="ocr_line_items" readonly="1"
                                   widget="text" nolabel="1"
                                   placeholder="No items extracted"
                                   style="font-family: monospace; font-size: 12px; min-height: 300px;"/>
                        </group>
                        <group string="Raw OCR Response">
                            <field name="ocr_extracted_texts" readonly="1"
                                   widget="text" nolabel="1"
                                   placeholder="No response"
                                   style="font-family: monospace; font-size: 12px; min-height: 300px;"/>
                        </group>
                    </group>

                </page>
            </xpath>

        </field>
    </record>

    <!-- OCR Usage Tree View -->
    <record id="view_ocr_usage_tree" model="ir.ui.view">
        <field name="name">ocr.usage.tree</field>
        <field name="model">ocr.usage</field>
        <field name="arch" type="xml">
            <list string="OCR Usage">
                <field name="user_id"/>
                <field name="month"/>
                <field name="used_count"/>
                <field name="free_quota"/>
                <field name="billable_count"/>
                <field name="total_cost" string="Cost (JPY)"/>
            </list>
        </field>
    </record>

    <!-- OCR Usage Action -->
    <record id="action_ocr_usage" model="ir.actions.act_window">
        <field name="name">OCR Usage</field>
        <field name="res_model">ocr.usage</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No OCR usage records yet
            </p>
            <p>
                OCR usage is tracked automatically when documents are processed.
                Each user gets 50 free scans per month.
            </p>
        </field>
    </record>

    <!-- Menu Item for OCR Usage (under Purchase menu) -->
    <menuitem id="menu_ocr_usage"
              name="OCR Usage"
              parent="purchase.menu_purchase_config"
              action="action_ocr_usage"
              sequence="100"/>

</odoo>
