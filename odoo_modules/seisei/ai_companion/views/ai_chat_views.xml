<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Chat Session Tree View -->
    <record id="view_ai_chat_session_tree" model="ir.ui.view">
        <field name="name">ai.chat.session.tree</field>
        <field name="model">ai.chat.session</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="AI Chat Sessions">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="message_count"/>
                <field name="last_message_date"/>
            </list>
        </field>
    </record>

    <!-- AI Chat Session Form View -->
    <record id="view_ai_chat_session_form" model="ir.ui.view">
        <field name="name">ai.chat.session.form</field>
        <field name="model">ai.chat.session</field>
        <field name="arch" type="xml">
            <form string="AI Chat Session">
                <header>
                    <button name="action_close" string="关闭会话" type="object" 
                            invisible="state == 'closed'"/>
                    <button name="action_reopen" string="重新打开" type="object" 
                            invisible="state == 'active'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="message_count"/>
                            <field name="last_message_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages">
                            <field name="message_ids" nolabel="1">
                                <list>
                                    <field name="role"/>
                                    <field name="content"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Chat Session Action -->
    <record id="action_ai_chat_session" model="ir.actions.act_window">
        <field name="name">AI Chat Sessions</field>
        <field name="res_model">ai.chat.session</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="context">{'default_user_id': uid}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ai_companion"
              name="AI Companion"
              sequence="100"/>
    
    <menuitem id="menu_ai_chat_sessions"
              name="Chat Sessions"
              parent="menu_ai_companion"
              action="action_ai_chat_session"
              sequence="10"/>
</odoo>

