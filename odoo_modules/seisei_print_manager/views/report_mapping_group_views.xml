<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Mapping Group List View -->
    <record id="view_report_mapping_group_list" model="ir.ui.view">
        <field name="name">seisei.report.mapping.group.list</field>
        <field name="model">seisei.report.mapping.group</field>
        <field name="arch" type="xml">
            <list string="Report Mapping Groups">
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
                <field name="default_printer_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Report Mapping Group Form View -->
    <record id="view_report_mapping_group_form" model="ir.ui.view">
        <field name="name">seisei.report.mapping.group.form</field>
        <field name="model">seisei.report.mapping.group</field>
        <field name="arch" type="xml">
            <form string="Report Mapping Group">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Group Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="default_printer_id"/>
                            <field name="default_copies"/>
                            <field name="default_duplex"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Mappings" name="mappings">
                            <field name="mapping_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="report_name"/>
                                    <field name="printer_name"/>
                                    <field name="priority"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Users" name="users">
                            <field name="user_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report Mapping Group Search View -->
    <record id="view_report_mapping_group_search" model="ir.ui.view">
        <field name="name">seisei.report.mapping.group.search</field>
        <field name="model">seisei.report.mapping.group</field>
        <field name="arch" type="xml">
            <search string="Report Mapping Groups">
                <field name="name"/>
                <field name="code"/>
                <field name="default_printer_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Default Printer" name="group_by_printer" context="{'group_by': 'default_printer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Report Mapping Group Action -->
    <record id="action_report_mapping_group" model="ir.actions.act_window">
        <field name="name">Report Mapping Groups</field>
        <field name="res_model">seisei.report.mapping.group</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first report mapping group!
            </p>
            <p>
                Groups allow you to organize report mappings and assign them to users.
                Users in a group will inherit all mappings from that group.
            </p>
        </field>
    </record>

    <!-- User Form View Enhancement -->
    <record id="view_res_users_form_inherit_mapping_group" model="ir.ui.view">
        <field name="name">res.users.form.inherit.mapping.group</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Print Mappings" name="print_mappings">
                    <group>
                        <field name="default_mapping_group_id"/>
                    </group>
                    <group string="Default Settings">
                        <field name="default_print_action"/>
                        <field name="default_printer_id"/>
                        <field name="default_print_copies"/>
                        <field name="default_print_duplex"/>
                        <field name="default_print_color_mode"/>
                    </group>
                    <!-- Actions group removed as methods don't exist in the model -->
                    <field name="report_mapping_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="report_name"/>
                            <field name="printer_name"/>
                            <field name="priority"/>
                            <field name="active"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Report Mapping Form View Enhancement -->
    <record id="view_report_mapping_form_inherit_group" model="ir.ui.view">
        <field name="name">seisei.report.mapping.form.inherit.group</field>
        <field name="model">seisei.report.mapping</field>
        <field name="inherit_id" ref="seisei_print_manager.view_seisei_report_mapping_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="group_id"/>
            </xpath>
        </field>
    </record>

</odoo> 