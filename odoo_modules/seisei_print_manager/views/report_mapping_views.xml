<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Mapping List View -->
        <record id="view_seisei_report_mapping_list" model="ir.ui.view">
            <field name="name">seisei.report.mapping.list</field>
            <field name="model">seisei.report.mapping</field>
            <field name="arch" type="xml">
                <list string="Report Mapping" decoration-success="active" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="report_name"/>
                    <field name="display_name"/>
                    <field name="printer_name"/>
                    <field name="priority"/>
                    <field name="copies"/>
                    <field name="usage_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Report Mapping Form View -->
        <record id="view_seisei_report_mapping_form" model="ir.ui.view">
            <field name="name">seisei.report.mapping.form</field>
            <field name="model">seisei.report.mapping</field>
            <field name="arch" type="xml">
                <form string="Report Mapping">
                    <header>
                        <button name="action_test_mapping" type="object" string="Test Mapping" class="btn-primary"/>
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_jobs" type="object" class="oe_stat_button" icon="fa-tasks">
                                <field name="usage_count" widget="statinfo" string="Usage Count"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="o_text_overflow" placeholder="Mapping Name (Optional)"/>
                            </h1>
                            <h3>
                                <field name="display_name" readonly="1" class="text-muted"/>
                            </h3>
                        </div>
                        
                        <group>
                            <group string="Report Information">
                                <field name="report_id" required="1"/>
                                <field name="action_type"/>
                            </group>
                            <group string="Printer Configuration">
                                <field name="printer_id" options="{'no_create': True}"/>
                                <field name="printer_name"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Matching Conditions">
                                <field name="condition" widget="ace" options="{'mode': 'json'}" placeholder="[]"/>
                            </page>
                            
                            <page string="Print Settings">
                                <group>
                                    <group string="Basic Settings">
                                        <field name="copies"/>
                                        <field name="duplex"/>
                                        <field name="color_mode"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Statistics">
                                <group>
                                    <group string="Usage Statistics">
                                        <field name="usage_count"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Report Mapping Kanban View -->
        <record id="view_seisei_report_mapping_kanban" model="ir.ui.view">
            <field name="name">seisei.report.mapping.kanban</field>
            <field name="model">seisei.report.mapping</field>
            <field name="arch" type="xml">
                <kanban string="Report Mapping">
                    <field name="name"/>
                    <field name="report_name"/>
                    <field name="display_name"/>
                    <field name="printer_name"/>
                    <field name="priority"/>
                    <field name="usage_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="display_name"/>
                                                <span t-if="!record.active.raw_value" class="badge badge-secondary ml-2">ÂΩíÊ°£</span>
                                            </strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <t t-esc="record.report_name.value"/>
                                            </small>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <span t-if="record.priority.raw_value &gt; 0" class="badge badge-info">
                                                ‰ºòÂÖàÁ∫ß: <t t-esc="record.priority.value"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>
                                            üñ®Ô∏è <strong>
                                                <t t-if="record.printer_name.raw_value">
                                                    <t t-esc="record.printer_name.value"/>
                                                </t>
                                                <t t-else="">
                                                    Ëá™Âä®ÈÄâÊã©
                                                </t>
                                            </strong>
                                        </div>
                                        <!-- Auto select field removed as it doesn't exist in the model -->
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="text-muted">
                                                üìä ‰ΩøÁî® <t t-esc="record.usage_count.value"/> Ê¨°
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Report Mapping Search View -->
        <record id="view_seisei_report_mapping_search" model="ir.ui.view">
            <field name="name">seisei.report.mapping.search</field>
            <field name="model">seisei.report.mapping</field>
            <field name="arch" type="xml">
                <search string="Search Report Mapping">
                    <field name="name" string="Name"/>
                    <field name="report_name" string="Report Name"/>
                    <field name="printer_name" string="Printer"/>
                    <separator/>
                    <filter name="filter_high_priority" string="High Priority" domain="[('priority', '&gt;', 5)]"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_report" string="Report" domain="[]" context="{'group_by': 'report_name'}"/>
                        <filter name="group_printer" string="Printer" domain="[]" context="{'group_by': 'printer_name'}"/>
                        <filter name="group_priority" string="Priority" domain="[]" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Report Mapping Action -->
        <record id="action_seisei_report_mapping" model="ir.actions.act_window">
            <field name="name">Report Mapping</field>
            <field name="res_model">seisei.report.mapping</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No report mapping configuration yet!
                </p>
                <p>
                    Report mapping is used to define which printer different reports use.
                    You can specify a specific printer for each report, or enable intelligent selection.
                </p>
            </field>
        </record>

    </data>
</odoo>