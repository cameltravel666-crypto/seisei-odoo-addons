<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit financial report form to add Excel button -->
    <record id="financial_report_view_form_xlsx" model="ir.ui.view">
        <field name="name">financial.report.view.form.xlsx</field>
        <field name="model">financial.report</field>
        <field name="inherit_id" ref="base_accounting_kit.financial_report_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='view_report_pdf']" position="after">
                <button string="Export Excel" name="view_report_xlsx" type="object"
                        class="btn-success" icon="fa-file-excel-o"/>
            </xpath>
        </field>
    </record>

    <!-- Cash Flow Report - inherits from base account_report_view_form which has check_report -->
    <record id="cash_flow_report_xlsx_button" model="ir.ui.view">
