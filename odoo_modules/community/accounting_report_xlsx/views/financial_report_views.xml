        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='check_report']" position="after">
                <button string="Export Excel" name="check_report_xlsx" type="object"
                        class="btn-success" icon="fa-file-excel-o"/>
            </xpath>
        </field>
    </record>

