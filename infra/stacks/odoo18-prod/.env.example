# =============================================================================
# Odoo 18 Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# cp .env.example .env
# =============================================================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=seisei-odoo18-prod

# Image Reference with Digest Pinning (REQUIRED for immutable deployments)
# Format: ghcr.io/cameltravel666-crypto/seisei-odoo18@sha256:abc123...
IMAGE_REF=ghcr.io/cameltravel666-crypto/seisei-odoo18@sha256:placeholder

# Database configuration
DB_HOST=seisei-odoo18-prod-rds.c1emceusojse.ap-northeast-1.rds.amazonaws.com
DB_PORT=5432
DB_USER=odoo18
DB_PASSWORD=CHANGEME_STRONG_PASSWORD
DB_NAME=odoo18_prod
DB_SSLMODE=require

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD

# Odoo configuration
ODOO_HTTP_PORT=8069
ODOO_LONGPOLLING_PORT=8072
ADMIN_PASSWORD=CHANGEME_ODOO_MASTER_PASSWORD

# AWS S3 (optional, legacy keys)
# AWS_ACCESS_KEY_ID=CHANGEME_AWS_ACCESS_KEY_ID
# AWS_SECRET_ACCESS_KEY=CHANGEME_AWS_SECRET_ACCESS_KEY
# AWS_S3_BUCKET=CHANGEME_AWS_S3_BUCKET

# Environment
ENVIRONMENT=production
ADDONS_PATH=/mnt/extra-addons,/usr/lib/python3/dist-packages/odoo/addons

# S3 Storage Configuration (Production - Restored)
SEISEI_S3_BUCKET=seisei-odoo-prod
SEISEI_S3_REGION=ap-northeast-1
SEISEI_S3_ACCESS_KEY=CHANGEME_S3_ACCESS_KEY
SEISEI_S3_SECRET_KEY=CHANGEME_S3_SECRET_KEY

# OCR Service Configuration
OCR_SERVICE_URL=http://13.159.193.191:8180/api/v1
OCR_SERVICE_KEY=CHANGEME_OCR_SERVICE_KEY
