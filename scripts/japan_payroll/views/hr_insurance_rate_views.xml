<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Insurance Rate Tree View -->
    <record id="hr_insurance_rate_view_tree" model="ir.ui.view">
        <field name="name">hr.insurance.rate.view.tree</field>
        <field name="model">hr.insurance.rate</field>
        <field name="arch" type="xml">
            <list string="Insurance Rates">
                <field name="prefecture_id"/>
                <field name="fiscal_year"/>
                <field name="effective_date"/>
                <field name="expiry_date"/>
                <field name="health_rate"/>
                <field name="health_rate_with_care"/>
                <field name="pension_rate"/>
                <field name="employment_rate"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Insurance Rate Form View -->
    <record id="hr_insurance_rate_view_form" model="ir.ui.view">
        <field name="name">hr.insurance.rate.view.form</field>
        <field name="model">hr.insurance.rate</field>
        <field name="arch" type="xml">
            <form string="Insurance Rate">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="prefecture_id"/>
                            <field name="fiscal_year"/>
                        </group>
                        <group string="Validity Period">
                            <field name="effective_date"/>
                            <field name="expiry_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group string="Health Insurance">
                            <field name="health_rate"/>
                            <field name="health_rate_with_care"/>
                            <field name="care_rate_diff"/>
                        </group>
                        <group string="Other Insurance">
                            <field name="pension_rate"/>
                            <field name="employment_rate"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Insurance Rate Search View -->
    <record id="hr_insurance_rate_view_search" model="ir.ui.view">
        <field name="name">hr.insurance.rate.view.search</field>
        <field name="model">hr.insurance.rate</field>
        <field name="arch" type="xml">
            <search string="Search Insurance Rates">
                <field name="prefecture_id"/>
                <field name="fiscal_year"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_prefecture" string="Prefecture" context="{'group_by': 'prefecture_id'}"/>
                    <filter name="group_fiscal_year" string="Fiscal Year" context="{'group_by': 'fiscal_year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Insurance Rate Action -->
    <record id="hr_insurance_rate_action" model="ir.actions.act_window">
        <field name="name">Insurance Rates</field>
        <field name="res_model">hr.insurance.rate</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hr_insurance_rate_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an insurance rate
            </p>
            <p>
                Define social insurance rates by prefecture and fiscal year.
            </p>
        </field>
    </record>

</odoo>
